<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'} ) do |f| %>
  <h2 class="form-signin-heading">Log in</h2>
  <%= f.email_field(:email, autofocus: true, class: 'form-control', placeholder: 'email' )%>
  <%= password_field_tag 'user[password]', nil, class: 'form-control', placeholder: 'password' %>

  <% if devise_mapping.rememberable? %>
    <div class="custom-control custom-checkbox mb-3">
      <%= f.check_box(:remember_me, class: 'custom-control-input') %>
      <%= f.label(:remember_me, 'Remember', class: 'custom-control-label') %>
    </div>
  <% end %>

  <%= f.submit('Log in', class: 'btn btn-lg btn-primary btn-block') %> </br>

  <%= render 'devise/shared/links' %>
<% end %>
